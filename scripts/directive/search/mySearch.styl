/* css for search */
$dark-primary-color = #512DA8
$primary-color = #673AB7
$light-primary = #FFFFFF
$text-icons = #D1C4E9
$accent-color = #536DFE
$primary-text = #212121
$secondary-text = #727272
$divider-color = #B6B6B6


.search-wrapper {
  position: relative;
  padding: 10px;
}
.search-wrapper {
  width: auto;
}
.search-box {
  color: black;
  width: 100%;
  height: 30px;
  font-size: 12px;
  border: 1px solid #ccc;
  outline: 0;
  padding: inherit;
  border-radius: 15px;
}
.search-box:focus {
  border: 2px solid #bebede;
}

.close-icon {
  z-index 2
  position: absolute;
  color: black;
  border: 1px solid transparent;
  background-color: transparent;
  display: inline-block;
  right: 16px;
  top: 12px;
  vertical-align: middle;
  outline: 0;
  cursor: pointer;
}
.my-color-icon {
  color: #fff
}

.input-container-search
  padding 0
  font-size 14px

.input-container-search.md-default-theme .md-input
  color $light-primary


.input-container-search.md-input-focused input
  border-color white !important


