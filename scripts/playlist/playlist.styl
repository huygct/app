.linked-show-songs
  display inline-block
  margin-left 8px

.my-listSong-in-playlist
  .md-no-style.md-list-item-inner
    padding 0
  .item-list-divider
    left 80px

.my-listSong-in-playlist .face
  border-radius: 30px;
  border: 1px solid #ddd;
  width: 48px;
  margin: 16px;

.my-back-button
  text-align right
  .md-button
    margin-top 8px
    margin-bottom 16px

.last-divider
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, .26)

.my-song-of-playlist
  display: inline;
  font-style: italic;

.my-listSong-in-playlist
  height auto
  overflow auto
  line-height normal

.list-items
  .name-song-in-playlist
    width 90%
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

  .artist-song-in-playlist
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

.my-form-content .header-show-songs
  .checkbox-add-all-song
    display inline

