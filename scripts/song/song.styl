@import '../main/constant.styl'

table.my-table td.name-song
  width: 120px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;

table.my-table td.artist-song
  width: 120px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

/*button*/
.my-button
  text-align: right;

@media (min-width: 700px)
  /*table style*/
  table.my-table th.name-song
    width: 35%;

  table.my-table th.artist-song
    width: 25%;

  table.my-table td.name-song
    width: 35%;
    max-width 0
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: normal;

  table.my-table td.artist-song
    width: 25%;
    max-width 0
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

