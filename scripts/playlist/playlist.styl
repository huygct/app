table.my-table th.name-playlist {
  width: 30%;
}

table.my-table th.description-playlist {
  width: 30%;
}

table.my-table td.name-playlist {
  width: 30%;
  max-width 0
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

table.my-table td.description-playlist {
  width: 30%;
  max-width 0
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

@media (max-width: 680px) {
  table.my-table td.name-playlist {
    width: 120px;
    max-width none
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  table.my-table td.description-playlist {
    width: 120px;
    max-width none
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  table td.name-playlist {
    font-weight: bold;
  }
}
