table.my-table td.name-playlist
  width: 120px;
  max-width none
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;

table.my-table td.description-playlist
  width: 120px;
  max-width none
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

@media (min-width: 700px)
  table.my-table th.name-playlist
    width: 30%;

  table.my-table th.description-playlist
    width: 30%;

  table.my-table td.name-playlist
    width: 30%;
    max-width 0
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: normal;

  table.my-table td.description-playlist
    width: 30%;
    max-width 0
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;


