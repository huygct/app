.linked-show-songs
  display inline-block
  margin-left 8px

.my-listSong-in-playlist .face
  border-radius: 30px;
  border: 1px solid #ddd;
  width: 48px;
  margin: 16px;

.my-back-button
  text-align right

  button
    margin 16px

.my-song-of-playlist {
  display: inline;
  font-style: italic;
}

.my-listSong-in-playlist
  height 400px
  overflow auto
  line-height normal

.list-items
  h3
    font-size 16px
    font-weight 500
  .name-song-in-playlist
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;

  .artist-song-in-playlist
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;

